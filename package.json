{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach -piv --topological-dev run build",
    "dev": "yarn workspaces foreach -piv run dev",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:stylelint",
    "lint:eslint": "eslint --ignore-path .lintignore $INIT_CWD",
    "lint:prettier": "prettier --check --ignore-unknown --ignore-path .lintignore $INIT_CWD",
    "lint:stylelint": "stylelint --ignore-path .lintignore $INIT_CWD"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte": "^2.26.0",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-jsdoc": "^0.4.2",
    "prettier-plugin-package": "^1.3.0",
    "prettier-plugin-svelte": "^2.10.0",
    "stylelint": "^15.6.0",
    "stylelint-config-recess-order": "^4.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "svelte": "^3.58.0"
  },
  "packageManager": "yarn@4.0.0-rc.42",
  "volta": {
    "node": "18.16.0",
    "yarn": "1.22.19"
  },
  "workspaces": [
    "packages/*"
  ]
}
