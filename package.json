{
  "name": "root",
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach -piv --topological-dev run build",
    "dev": "yarn workspaces foreach -piv run dev",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:stylelint",
    "lint:eslint": "eslint --ignore-path .lintignore $INIT_CWD",
    "lint:prettier": "prettier --check --ignore-unknown --ignore-path .lintignore $INIT_CWD",
    "lint:stylelint": "stylelint --ignore-path .lintignore $INIT_CWD"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-svelte": "^2.32.2",
    "postcss-html": "^1.5.0",
    "prettier": "^2.8.8",
    "prettier-plugin-jsdoc": "^0.4.2",
    "prettier-plugin-package": "^1.3.1",
    "prettier-plugin-svelte": "^2.10.1",
    "stylelint": "^15.10.1",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "svelte": "^4.0.5"
  },
  "packageManager": "yarn@4.0.0-rc.48",
  "volta": {
    "node": "18.16.1",
    "yarn": "4.0.0-rc.48"
  },
  "workspaces": [
    "packages/*"
  ]
}
